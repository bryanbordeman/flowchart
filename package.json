{
    "name": "flowchart-app",
    "version": "1.0.0",
    "description": "A flowchart application built with Electron and React",
    "main": "public/electron.js",
    "private": true,
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "electron": "wait-on tcp:3000 && electron .",
        "electron-dev": "ELECTRON_IS_DEV=true electron .",
        "electron-pack": "npm run build && electron-builder",
        "preelectron-pack": "npm run build",
        "dev": "concurrently -k \"BROWSER=none npm start\" \"wait-on tcp:3000 && npm run electron-dev\"",
        "start-electron": "concurrently \"npm start\" \"wait-on http://localhost:3000 && ELECTRON_IS_DEV=true electron .\""
    },
    "dependencies": {
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.1",
        "@mui/icons-material": "^7.2.0",
        "@mui/material": "^7.2.0",
        "electron-is-dev": "^2.0.0",
        "react": "^18.2.0",
        "react-color": "^2.19.3",
        "react-dom": "^18.2.0",
        "react-draggable": "^4.4.5",
        "react-resizable": "^3.0.5",
        "react-scripts": "5.0.1"
    },
    "devDependencies": {
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "concurrently": "^8.2.2",
        "electron": "^25.0.0",
        "electron-builder": "^24.0.0",
        "wait-on": "^7.0.1"
    },
    "build": {
        "appId": "com.flowchart.app",
        "productName": "Flowchart App",
        "directories": {
            "output": "dist"
        },
        "files": [
            "build/**/*",
            "public/electron.js",
            "public/icon.png",
            "node_modules/**/*"
        ],
        "mac": {
            "icon": "build/icons/icon_mac.icns"
        },
        "win": {
            "icon": "build/icons/icon.ico"
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}

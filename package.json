{
    "name": "workflow-navigator",
    "version": "1.0.0",
    "description": "Albatross Projects workflow navigator application",
    "main": "public/electron.js",
    "homepage": "./",
    "private": true,
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "electron": "wait-on tcp:3000 && electron .",
        "electron-dev": "ELECTRON_IS_DEV=true electron .",
        "electron-pack": "npm run build && electron-builder",
        "preelectron-pack": "npm run build",
        "dev": "concurrently -k \"BROWSER=none npm start\" \"wait-on tcp:3000 && npm run electron-dev\"",
        "start-electron": "concurrently \"npm start\" \"wait-on http://localhost:3000 && ELECTRON_IS_DEV=true electron .\"",
        "dist": "npm run build && electron-builder --publish=never"
    },
    "dependencies": {
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.1",
        "@mui/icons-material": "^7.2.0",
        "@mui/material": "^7.2.0",
        "electron-is-dev": "^2.0.0",
        "react": "^18.2.0",
        "react-color": "^2.19.3",
        "react-dom": "^18.2.0",
        "react-draggable": "^4.4.5",
        "react-resizable": "^3.0.5",
        "react-scripts": "5.0.1"
    },
    "devDependencies": {
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "concurrently": "^8.2.2",
        "electron": "^25.0.0",
        "electron-builder": "^24.0.0",
        "wait-on": "^7.0.1"
    },
    "build": {
        "appId": "com.albatrossprojects.workflow-navigator",
        "productName": "Workflow Navigator",
        "directories": {
            "output": "dist"
        },
        "files": [
            "build/**/*",
            "public/electron.js",
            "public/preload.js",
            "public/icon.png",
            "public/icon.ico"
        ],
        "extraResources": [
            {
                "from": "public/icon.png",
                "to": "icon.png"
            },
            {
                "from": "public/icon.ico",
                "to": "icon.ico"
            }
        ],
        "mac": {
            "icon": "public/icon.png",
            "category": "public.app-category.productivity",
            "target": [
                {
                    "target": "dmg",
                    "arch": [
                        "x64",
                        "arm64"
                    ]
                }
            ]
        },
        "win": {
            "icon": "public/icon.ico",
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "linux": {
            "icon": "public/icon.png",
            "target": [
                {
                    "target": "AppImage",
                    "arch": [
                        "x64"
                    ]
                }
            ]
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}

{
    "name": "flowchart-app",
    "version": "1.0.0",
    "description": "A flowchart application built with Electron and React",
    "main": "public/electron.js",
    "private": true,
    "scripts": {
        "start": "react-scripts start",
        "build": "react-scripts build",
        "test": "react-scripts test",
        "eject": "react-scripts eject",
        "electron": "electron .",
        "electron-dev": "ELECTRON_IS_DEV=true electron .",
        "electron-pack": "npm run build && electron-builder",
        "preelectron-pack": "npm run build",
        "dev": "./dev.sh",
        "start-electron": "concurrently \"npm start\" \"wait-on http://localhost:3000 && ELECTRON_IS_DEV=true electron .\""
    },
    "dependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-scripts": "5.0.1",
        "react-draggable": "^4.4.5",
        "react-resizable": "^3.0.5",
        "electron-is-dev": "^2.0.0"
    },
    "devDependencies": {
        "@types/react": "^18.2.0",
        "@types/react-dom": "^18.2.0",
        "electron": "^25.0.0",
        "electron-builder": "^24.0.0",
        "concurrently": "^8.0.0",
        "wait-on": "^7.0.1"
    },
    "build": {
        "appId": "com.flowchart.app",
        "productName": "Flowchart App",
        "directories": {
            "output": "dist"
        },
        "files": [
            "build/**/*",
            "public/electron.js",
            "node_modules/**/*"
        ],
        "mac": {
            "category": "public.app-category.productivity"
        },
        "win": {
            "target": "nsis"
        },
        "linux": {
            "target": "AppImage"
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
